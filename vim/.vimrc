# INDENTATION
set expandtab
set ts=2
set sw=2
set ai
set si

# SEARCH
set ignorecase
set smarecase
set incsearch
set hlsearch

# LINE NUMBERS
set number
set relativenumber

# TEXT RENDERING
syntax enable
filetype on
filetype plugin on
filetype indent on
set wrap

# UI
set wildmenu
set wildmode=list:longest
set noerrorbells
set novisualbell

# FOLDING
set foldmethod=syntax

# MISC
set confirm
